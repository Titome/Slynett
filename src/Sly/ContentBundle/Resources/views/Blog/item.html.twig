<article class="show">
    <header>
        <section role="contentinfo">
            <h2><a href="{{ path('blog_show', {'slug': item.slug }) }}" title="{{ item }}">{{ item }}</a></h2>
        </section>
        
        <a href="{{ path('blog_show', {'slug': item.slug }) }}" title="{{ item }}">
            <img src="{{ '/uploads/contents/%itemId%/%itemPicture%' | replace({'%itemId%': item.id, '%itemPicture%': item.picture}) | apply_filter('show') }}" alt="{{ item }}" class="show" />
        </a>
    </header>
    
    <ul class="infos">
        <li class="published_at">
            <a href="#publishedat">
                <abbr title="{{ item.publishedAt | date('core.date.time.big' | trans) }}" class="dtstart">
                    {{ 'infos.publishedat' | trans({'%date%': item.publishedAt | date('core.date.time.normal' | trans)}) }}
                </abbr>
            </a>
        </li>
        <li class="comments">
            <a href="#disqus_thread" data-disqus-identifier="{{ item.disqusId }}" class="goto">&nbsp;</a>
        </li>
        <li class="share">
            <a href="#sidebar-sharebuttons" class="light_sidebarsharebuttons goto">
                {{ 'infos.share' | trans }}
            </a>
        </li>
    </ul>
    
    <p class="description">
        {% if item.excerpt %}
            {{ item.excerpt | striptags }}
        {% else %}
            {{ item.content | striptags | truncate(250) }}
        {% endif %}
    </p>
    
    <div class="media">
        <ul class="category">
            {% for k, cat in item.categories %}
                <li><a href="{{ path('tutorial_category', {'slug': cat.slug}) }}" class="caticon medium {{ cat.slug }}" title="{{ cat }}"></a></li>
            {% endfor %}
        </ul>
    </div>
    
    {% if item.tags | length %}
        <ul class="tags">
            {% for tag in item.tagsCollection %}
                <li><a href="#{{ tag }}" class="container">{{ tag }}</a></li>
            {% endfor %}
        </ul>
    {% endif %}
    
    <div class="content-show">
        {{ item.content | contentFilters | raw }}
    </div>
</article>