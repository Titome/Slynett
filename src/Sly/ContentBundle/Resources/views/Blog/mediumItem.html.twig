{% spaceless %}
    <article>
        <h3><a href="{{ path('blog_show', {'slug': item.slug }) }}" title="{{ item }}">{{ item.title }}</a></h3>

        <div>            
            <div class="article">
                <p class="description">
                    <a href="{{ path('blog_show', {'slug': item.slug }) }}" title="{{ item }}">
                        {% if item.excerpt %}
                            {{ item.excerpt | striptags }}
                        {% else %}
                            {{ item.content | striptags | truncate(250) }}
                        {% endif %}
                    </a>
                </p>
                
                {% if item.tags | length %}
                    <ul class="tags">
                        {% for tag in item.tagsCollection %}
                            <li><a href="#{{ tag }}" class="container">{{ tag }}</a></li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
            
            {%if item.picture %}
                <div class="thumbnail">
                    <a href="{{ path('blog_show', {'slug': item.slug }) }}" title="{{ item }}">
                        <img src="{{ '/uploads/contents/%itemId%/%itemPicture%' | replace({'%itemId%': item.id, '%itemPicture%': item.picture}) | apply_filter('thumbnail') }}" alt="{{ item }}" />
                    </a>
                </div>
            {% endif %}
            
            <div class="right">
                <p class="author">
                    <img src="http://0.gravatar.com/avatar/{{ project.author.email | md5 }}?s=32" alt="" class="author" />
                    
                    {{ 'list.item.author' | trans({'%authorName%': project.author.name}, 'blog') }}
                    
                    <a href="{{ path('author') }}" title="{{ project.author.name }}">
                        {{ project.author.name }}
                    </a>
                </p>
                
                <div class="hsep_1 t4"></div>
                
                <p class="date">
                    <abbr title="{{ item.publishedAt | date('core.date.time.big' | trans) }}" class="dtstart">
                        {{ item.publishedAt | date('core.date.normal' | trans) }}
                    </abbr>
                </p>
                
                {% if item.categories | length %}                
                    <p class="categories">
                        {% for k, cat in item.categories %}
                            <a href="{{ path('blog_category', {'slug': cat.slug}) }}" class="{{ cat.slug }}">{{ cat }}</a>{% if k+1 < item.categories | length %} / {% endif %}
                        {% endfor %}
                    </p>
                    
                    <div class="hsep_1 t4"></div>
                    
                    <ul class="category small">
                        {% for k, cat in item.categories %}
                            <li><a href="{{ path('blog_category', {'slug': cat.slug}) }}" class="caticon small {{ cat.slug }}" title="{{ cat }}"></a></li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>
    </article>
{% endspaceless %}