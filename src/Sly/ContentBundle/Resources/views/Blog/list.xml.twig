<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
<channel>
        <title>{{ 'seo.title' | trans({}, 'blog') }} | {{ project.name }}</title>
        <description>{{ 'seo.description' | trans({}, 'blog') }}</description>
        <link>{{ url('blog') }}</link>
        <lastBuildDate>{{ now | date('D, d M Y H:i:s') }}</lastBuildDate>
        <pubDate>{{ now | date('D, d M Y H:i:s') }}</pubDate>
        
        {% for item in contentPaginator %}
            <item>
                <title>{{ item }}</title>
                <description>
                    {% if item.excerpt %}
                        {{ item.excerpt | striptags }}
                    {% else %}
                        {{ item.content | striptags | truncate(150) }}
                    {% endif %}
                </description>
                <link>{{ url('blog_show', {'slug': item.slug }) }}</link>
                <guid>{{ item.id }}-{{ item.slug }}</guid>
                <pubDate>{{ item.publishedAt | date('D, d M Y H:i:s') }}</pubDate>
            </item>
        {% endfor %}
</channel>
</rss>