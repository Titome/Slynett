{% extends "SlyCoreBundle:Layout:layout.rightSidebar.html.twig" %}

{% block title %}{{ 'seo.title' | trans({}, 'blog') }}{% endblock title %}
{% block description %}{{ 'seo.description' | trans({}, 'blog') }}{% endblock description %}

{% set topMain = true %}

{% block topMainTitle %}
    <a href="{{ path('blog') }}" title="{{ 'core.menu.blog' | trans }}">
        {{ 'title' | trans({}, 'blog') }}
    </a>
{% endblock topMainTitle %}

{% block topMainMenu %}
    {% render 'SlyContentBundle:Component:categories' with {'type': 'blog'} %}
{% endblock topMainMenu %}

{% block rightSidebar %}
    {% include 'SlyContentBundle:Blog:rightSidebar.html.twig' %}
{% endblock rightSidebar %}

{% block content %}
    <section class="blog list">
        {% for key, item in contentPaginator %}
            {% if key <= 0 %}
                {% include 'SlyContentBundle:Blog:bigItem.html.twig' with {'item': item, 'itemKey': key } %}
            {% else %}
                {% include 'SlyContentBundle:Blog:item.html.twig' with {'item': item, 'itemKey': key } %}
            {% endif %}
        {% else %}
            <p class="empty">{{ 'list.nocontent' | trans({}, 'blog') }}</p>
        {% endfor %}
    </section>
    
    {% if contentPaginator | length %}
        <div class="pager">
            {{ pagerfanta(contentPaginator, 'default') }}
        </div>
    {% endif %}
{% endblock content %}

{% block javascripts %}
    {{ parent() }}
    
    {% render 'SlyContentBundle:Component:disqusCountJS' %}
{% endblock javascripts %}