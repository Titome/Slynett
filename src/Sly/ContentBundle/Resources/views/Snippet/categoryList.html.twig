{% extends "SlyCoreBundle:Layout:layout.html.twig" %}

{% block title %}{{ category }} | {{ 'seo.title' | trans({}, 'snippet') }}{% endblock title %}
{% block description %}{{ 'category.seo.description' | trans({'%category%': category}, 'snippet') }}{% endblock description %}

{% set topMain = true %}

{% block topMainTitle %}
    <a href="{{ path('snippet') }}" title="{{ 'core.menu.snippet' | trans }}">
        {{ 'title' | trans({}, 'snippet') }}
    </a>
{% endblock topMainTitle %}

{% block topMainMenu %}
    {% render 'SlyContentBundle:Component:categories' with {'type': 'snippet', 'activeCategory': category} %}
{% endblock topMainMenu %}

{% block content %}
    <h3>{{ 'category.title' | trans({'%category%': category}, 'snippet') }}</h3>

    <section class="snippet list">
        {% for item in contentPaginator %}
            {% include 'SlyContentBundle:Snippet:mediumItem.html.twig' with {'item': item } %}
        {% else %}
            <p class="empty">{{ 'list.nocontent' | trans({}, 'snippet') }}</p>
        {% endfor %}
    </section>
    
    {% if contentPaginator | length %}
        <div class="pager">
            {{ pagerfanta(contentPaginator, 'default') }}
        </div>
    {% endif %}
{% endblock content %}