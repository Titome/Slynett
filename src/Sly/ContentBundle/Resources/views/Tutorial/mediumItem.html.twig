{% spaceless %}
    <figure class="tpl4">
        {% if item.categories | length %}
            <ul class="categories colored">
                {% for k, cat in item.categories %}
                    <li>
                        <a href="{{ path('tutorial_category', {'slug': cat.slug}) }}" class="category {{ cat.slug }}" title="{{ cat }}">{{ cat }}</a>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
        
        {% if item.link %}
            <a href="{{ path('tutorial_show', {'slug': item.slug }) }}" title="{{ item }}">
                <img src="{{ item.dailyMotionPictureUrl }}" class="tutorial" alt="{{ item }}" />
            </a>
        {% else %}
            {%if item.picture %}
                <a href="{{ path('tutorial_show', {'slug': item.slug }) }}" title="{{ item }}">
                    <img src="{{ '/uploads/contents/%itemId%/%itemPicture%' | replace({'%itemId%': item.id, '%itemPicture%': item.picture}) | apply_filter('tutorial') }}" alt="{{ item }}" class="tutorial" />
                </a>
            {% endif %}
        {% endif %}
        
        <h3>
            <a href="{{ path('tutorial_show', {'slug': item.slug }) }}" title="{{ item }}">
                {{ item }}
            </a>
        </h3>
    </figure>
{% endspaceless %}