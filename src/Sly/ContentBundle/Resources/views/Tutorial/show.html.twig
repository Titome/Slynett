{% extends "SlyCoreBundle:Layout:layout.rightSidebar.html.twig" %}

{% block title %}{{ item }} | {{ 'seo.title' | trans({}, 'tutorial') }}{% endblock title %}
{% block description %}{{ item.excerpt | striptags }}{% endblock description %}

{% set topMain = true %}

{% block topMainTitle %}
    <a href="{{ path('blog') }}" title="{{ 'core.menu.tutorial' | trans }}">
        {{ 'title' | trans({}, 'blog') }}
    </a>
{% endblock topMainTitle %}

{% block topMainMenu %}
    {% render 'SlyContentBundle:Component:categories' with {'type': 'tutorial', 'noActive': true} %}
{% endblock topMainMenu %}

{% block stylesheets %}
    {{ parent() }}

    {% include 'SlyContentBundle::inc.syntaxhighlighter.css.html.twig' %}
{% endblock stylesheets %}

{% block rightSidebar %}
    {% include 'SlyContentBundle:Tutorial:rightSidebar.html.twig' %}
{% endblock rightSidebar %}

{% block content %}
    {% include 'SlyContentBundle:Tutorial:item.html.twig' with {'item': item } %}
    
    <div id="disqus_thread"></div>
{% endblock content %}

{% block javascripts %}
    {{ parent() }}
    
    {% include 'SlyContentBundle::inc.syntaxhighlighter.js.html.twig' %}
    {% render 'SlyContentBundle:Component:disqusJS' with {'item': item, 'type': 'watch'} %}
{% endblock javascripts %}