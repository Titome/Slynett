<ul class="menu second">
    {% if noHome is not defined %}
        <li class="{{ app.request.attributes.get('_route') | checkActive(['homepage']) }}">
            <a href="{{ path('homepage') }}">
                {{ 'core.menu.homepage' | trans }}
            </a>
        </li>
    {% endif %}
    <li class="{{ app.request.attributes.get('_route') | checkActive(['author']) }}">
        <a href="{{ path('author') }}">
            {{ 'core.menu.author' | trans }}
        </a>
    </li>
    <li>
        <a href="{{ networks.github }}" onclick="var w=window.open(this.href); w.focus(); return false;">
            {{ 'core.menu.github' | trans({'%name%': project.name}) }}
        </a>
    </li>
    <li>
        <a href="{{ project.github.sources.url }}" onclick="var w=window.open(this.href); w.focus(); return false;">
            {{ 'core.menu.github.sources' | trans({'%name%': project.name}) }}
        </a>
    </li>
    <li class="{{ app.request.attributes.get('_route') | checkActive(['contact']) }}">
        <a href="{{ path('contact') }}">
            {{ 'core.menu.contact' | trans }}
        </a>
    </li>
</ul>