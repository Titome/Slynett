{% spaceless %}
    <ul>
        {% for item in portfolioItems %}
            {% if item.disabled is defined %}
                <li class="{{ item.type }} disabled">
                    <div>
                        <h5>{{ 'portfolio.type.%type%' | replace({'%type%': item.type}) | trans({}, 'author') }}</h5>
                        <span class="btn">{{ 'portfolio.disabled' | trans({}, 'author') }}</span>
                        <h4><a href="#" title="{{ item.title }}">{{ item.title }}</a></h4>
                        <p><a href="#" title="{{ item.title }}">{{ item.description }}</a></p>
                        {% if item.tech | length %}
                            <ul>
                                {% for t in item.tech %}
                                    <li>{{ t }}</li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>

                    <a href="#" title="{{ item.title }}">
                        <img src="{{ '/uploads/author/portfolio/%picture%'
                             | replace({'%picture%': item.picture})
                             | apply_filter('portfolio') }}" alt="{{ item.title }}" />
                    </a>
                </li>
            {% elseif item.private is defined %}
                <li class="{{ item.type }} private">
                    <div>
                        <h5>{{ 'portfolio.type.%type%' | replace({'%type%': item.type}) | trans({}, 'author') }}</h5>
                        <span class="btn">{{ 'portfolio.private' | trans({}, 'author') }}</span>
                        <h4><a href="#" title="{{ item.title }}">{{ item.title }}</a></h4>
                        <p><a href="#" title="{{ item.title }}">{{ item.description }}</a></p>
                        {% if item.tech | length %}
                            <ul>
                                {% for t in item.tech %}
                                    <li>{{ t }}</li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>

                    <a href="#" title="{{ item.title }}">
                        <img src="{{ '/uploads/author/portfolio/%picture%'
                             | replace({'%picture%': item.picture})
                             | apply_filter('portfolio') }}" alt="{{ item.title }}" />
                    </a>
                </li>
            {% else %}
                <li class="{{ item.type }}">
                    <div>
                        <h5>{{ 'portfolio.type.%type%' | replace({'%type%': item.type}) | trans({}, 'author') }}</h5>

                        <a href="{{ item.url }}" title="{{ item.title }}" onclick="var w=window.open(this.href); w.focus(); return false;" class="btn">
                            {{ 'portfolio.show' | trans({}, 'author') }}
                        </a>

                        <h4>
                            <a href="{{ item.url }}" title="{{ item.title }}" onclick="var w=window.open(this.href); w.focus(); return false;">
                                {{ item.title }}
                            </a>
                        </h4>

                        <p>
                            <a href="{{ item.url }}" title="{{ item.title }}" onclick="var w=window.open(this.href); w.focus(); return false;">
                                {{ item.description }}
                            </a>
                        </p>

                        {% if item.tech | length %}
                            <ul>
                                {% for t in item.tech %}
                                    <li>{{ t }}</li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </div>

                    <a href="{{ item.url }}" title="{{ item.title }}" onclick="var w=window.open(this.href); w.focus(); return false;">
                        <img src="{{ '/uploads/author/portfolio/%picture%'
                             | replace({'%picture%': item.picture})
                             | apply_filter('portfolio') }}" alt="{{ item.title }}" />
                    </a>
                </li>
            {% endif %}
        {% endfor %}
    </ul>
{% endspaceless %}