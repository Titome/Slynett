{% extends "SlyCoreBundle:Layout:layout.rightSidebar.html.twig" %}

{% block title %}{{ 'seo.title' | trans({}, 'author') }}{% endblock title %}
{% block description %}{{ 'presentation.seo.description' | trans({}, 'author') }}{% endblock description %}

{% set topMain = true %}

{% block topMainTitle %}
    <a href="{{ path('author') }}" title="{{ 'title' | trans({}, 'author') }}">
        {{ 'title' | trans({}, 'author') }}
    </a>
{% endblock topMainTitle %}

{% block topMainMenu %}
    {% include 'SlyCoreBundle:Author:mainMenu.html.twig' %}
{% endblock topMainMenu %}

{% block rightSidebar %}
    {% include 'SlyCoreBundle:Author:rightSidebar.html.twig' %}
{% endblock rightSidebar %}

{% block content %}
    {% if app.request.query.get('page') <= 1 %}
        <section class="introduction">
            <blockquote>
                {{ 'presentation.presentation.description' | trans({}, 'author') }}
            </blockquote>
        </section>
    {% endif %}

    <article class="tpl3">        
        <div class="header">
            <h3>{{ 'presentation.more' | trans({}, 'author') }}</h3>
            
            {% include 'SlyCoreBundle:Author:mainMenu.html.twig' with {'withoutFirst': true} %}
        </div>
    </article>
{% endblock content %}