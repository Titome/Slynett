{% extends "SlyCoreBundle:Layout:layout.rightSidebar.html.twig" %}

{% block title %}{{ 'contact.seo.title' | trans({}, 'page') }}{% endblock title %}
{% block description %}{{ 'contact.seo.description' | trans({}, 'page') }}{% endblock description %}

{% block rightSidebar %}
    {% include 'SlyCoreBundle:Block:socialNetworks.html.twig' %}
{% endblock rightSidebar %}

{% block content %}
    <h3>{{ 'contact.title' | trans({}, 'page') }}</h3>
    
    <form action="{{ path('contact') }}" method="post" {{ form_enctype(contactForm) }}>
        {{ form_errors(contactForm) }}
        
        <ul>
            <li>{{ form_row(contactForm.name, {'label': 'contact.form.name' | trans({}, 'page')}) }}</li>
            <li>{{ form_row(contactForm.email, {'label': 'contact.form.email' | trans({}, 'page')}) }}</li>
            <li>{{ form_row(contactForm.subject, {'label': 'contact.form.subject' | trans({}, 'page')}) }}</li>
            <li>{{ form_row(contactForm.message, {'label': 'contact.form.message' | trans({}, 'page')}) }}</li>
        </ul>
        
        <p>
            <button type="submit" class="btn primary">{{ 'contact.form.submit' | trans({}, 'page') }}</button>
        </p>
        
        {{ form_rest(contactForm) }}
    </form>
{% endblock content %}