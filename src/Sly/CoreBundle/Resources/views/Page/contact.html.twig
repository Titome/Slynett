{% extends "SlyCoreBundle:Layout:layout.rightSidebar.html.twig" %}

{% block title %}{{ 'contact.seo.title' | trans({}, 'page') }}{% endblock title %}
{% block description %}{{ 'contact.seo.description' | trans({}, 'page') }}{% endblock description %}

{% block rightSidebar %}
    <blockquote>{{ 'contact.sidebar.follow' | trans({'%name%': project.name}, 'page') }}</blockquote>

    {% include 'SlyCoreBundle:Block:socialNetworks.html.twig' %}
{% endblock rightSidebar %}

{% set topMain = true %}

{% block topMainTitle %}
    <a href="{{ path('contact') }}" title="{{ 'contact.title' | trans({}, 'page') }}">
        {{ 'contact.title' | trans({}, 'page') }}
    </a>
{% endblock topMainTitle %}

{% block content %}
    <section class="introduction">
        <blockquote>
            {{ 'contact.seo.description' | trans({}, 'page') }}
        </blockquote>
    </section>
    
    <p>
        {{ 'contact.email.msg1' | trans({}, 'page') }}
        <a href="mailto:{{ project.email | textEncode | raw }}">{{ project.email | textEncode | raw }}</a> /
        <a href="mailto:{{ project.shortemail | textEncode | raw }}">{{ project.shortemail | textEncode | raw }}</a>
        {{ 'contact.email.msg2' | trans({}, 'page') }}
    </p>

    {% if app.session.hasFlash('success') %}
        <section class="flash success">
            <strong>{{ app.session.flash('success') }}</strong>
        </section>
    {% endif %}
    
    <form action="{{ path('contact') }}" method="post" {{ form_enctype(contactForm) }}>
        {{ form_errors(contactForm) }}
        
        <div class="form">
            {{ form_row(contactForm.name, {'label': 'contact.form.name' | trans({}, 'page')}) }}
            {{ form_row(contactForm.email, {'label': 'contact.form.email' | trans({}, 'page')}) }}
            {{ form_row(contactForm.twitter, {'label': 'contact.form.twitter' | trans({}, 'page')}) }}
            {{ form_row(contactForm.subject, {'label': 'contact.form.subject' | trans({}, 'page')}) }}
            {{ form_row(contactForm.message, {'label': 'contact.form.message' | trans({}, 'page')}) }}
            
            <div class="mlkqsd">
                {{ form_row(contactForm.mlkqsd, {'label': 'MLKQSD'}) }}
            </div>

            <div class="submit">
              <input type="submit" value="{{ 'contact.form.submit' | trans({}, 'page') }}" />  
            </div>
        </div>
        
        {{ form_rest(contactForm) }}
    </form>
{% endblock content %}